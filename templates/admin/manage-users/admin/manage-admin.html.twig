{% extends 'admin/base.html.twig' %}

{% block body %}
    {% include 'admin/navigation.html.twig' %}

    <div class="container">
        <div class="row flex-column flex-sm-row mt-4">
            <div class="col-md-3">
                {% include('admin/manage-users/left-panel.html.twig') %}
            </div>

            <div class="col-md-9">
                <div class="search-form">
                    <form action="{{ path('admin.manage.admins') }}" method="get" class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="findByNameAdmin" id="findByNameAdmin" placeholder="Имя"
                                    {% if (app.request.get('findByNameAdmin')) %} value="{{ app.request.get('findByNameAdmin') }}" {% endif %}>
                        </div>
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="findByEmailAdmin" id="findByEmailAdmin" placeholder="E-mail"
                                    {% if (app.request.get('findByEmailAdmin')) %} value="{{ app.request.get('findByEmailAdmin') }}" {% endif %}>
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Поиск</button>
                    </form>
                </div>
                <div class="search-result pt-3">

                    {% include('admin/manage-users/admin/admin-table.html.twig') %}

                </div>
            </div>

        </div>
    </div>

{% endblock %}