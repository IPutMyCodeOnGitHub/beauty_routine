{% extends 'admin/base.html.twig' %}

{% block body %}
    {% include 'admin/navigation.html.twig' %}

    <div class="container">
        <div class="row flex-column flex-sm-row mt-4">
            <div class="col-md-3">
                {% include('admin/manage-users/left-panel.html.twig') %}
            </div>

            <div class="col-md-9">
                <div class="search-form">
                    <form action="{{ path('admin.manage.experts') }}" method="get" class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="findByNameExpert" id="findExpert" placeholder="Имя"
                                    {% if (app.request.get('findByNameExpert')) %} value="{{ app.request.get('findByNameExpert') }}" {% endif %}>
                        </div>
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="findByEmailExpert" id="findByEmailExpert" placeholder="E-mail"
                                    {% if (app.request.get('findByEmailExpert')) %} value="{{ app.request.get('findByEmailExpert') }}" {% endif %}>
                        </div>
                        <div class="form-check mx-sm-3 mb-2">
                            <input class="form-check-input" type="checkbox" name="checkActiveExpert" id="checkActiveExpert"
                                    {% if (app.request.get('checkActiveExpert')) %} checked {% endif %}>
                            <label class="form-check-label" for="checkActiveExpert">
                                Только не подтверждённые
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Поиск</button>
                    </form>
                </div>
                <div class="search-result pt-3">

                    {% include('admin/manage-users/experts/expert-table.html.twig') %}

                </div>
            </div>

        </div>
    </div>

{% endblock %}